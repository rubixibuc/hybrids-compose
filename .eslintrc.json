{
  "env": {
    "commonjs": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "globals": {
    "store": "writable",
    "process": "readonly",
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "sort-imports": "error",
    "sort-keys": "error",
    "sort-vars": "error"
  }
}
